#!/usr/bin/env bash
ROOT_DIR="$(dirname $0)/../"
source "${ROOT_DIR}/etc/settings"

if [[ -z ${BACKBLAZE_API_URL} ]] || [[ -z ${BACKBLAZE_ACCOUNT_AUTHORIZATION_TOKEN} ]]; then
  BACKBLAZE_ACCOUNT_AUTHORIZATION_RESPONSE=$(
    curl \
      https://api.backblazeb2.com/b2api/v1/b2_authorize_account \
      -u "${BACKBLAZE_ACCOUNT_ID}:${BACKBLAZE_APPLICATION_KEY}" \
      2> /dev/null
  )
  BACKBLAZE_API_URL=$(echo ${BACKBLAZE_ACCOUNT_AUTHORIZATION_RESPONSE} | jq -r .apiUrl)
  BACKBLAZE_ACCOUNT_AUTHORIZATION_TOKEN=$(echo ${BACKBLAZE_ACCOUNT_AUTHORIZATION_RESPONSE} | jq -r .authorizationToken)
fi

cat <<EOF
BACKBLAZE_MOVIE_BUCKET="${BACKBLAZE_MOVIE_BUCKET}"
BACKBLAZE_API_URL="$(echo ${BACKBLAZE_API_URL})"
BACKBLAZE_ACCOUNT_AUTHORIZATION_TOKEN="$(echo ${BACKBLAZE_ACCOUNT_AUTHORIZATION_TOKEN})"
EOF
