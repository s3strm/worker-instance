#!/usr/bin/env bash
ROOT_DIR="$(dirname $0)/../"

file=$1
extension=$(grep -E -o [^\.]+$ <(echo ${file}))
imdb_id=$(basename ${file} .${extension})

case ${extension} in
  mp4|avi|mkv)
    make -C ${ROOT_DIR}               \
      outgoing/${imdb_id}/video.mp4  \
      outgoing/${imdb_id}/kodi.strm  \
      outgoing/${imdb_id}/kodi.nfo   \
      outgoing/${imdb_id}/poster.jpg
    ;;
  jpg) make -C ${ROOT_DIR} outgoing/${imdb_id}/poster.jpg  ;;
  srt) make -C ${ROOT_DIR} outgoing/${imdb_id}/english.srt ;;
esac
