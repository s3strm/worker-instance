#!/usr/bin/env bash
set -e
ROOT_DIR="$(dirname $0)/../"
source "${ROOT_DIR}/etc/settings"

FTP_ADDR="ftp://${FTP_USERNAME}:${FTP_PASSWORD}@${FTP_HOSTNAME}${FTP_PATH}"
FILES=$(curl --list-only ${FTP_ADDR} 2> /dev/null | grep -E ^tt[0-9]{7})
TMPDIR=$(mktemp -d)

if [[ ! -d ${INCOMING_DIR} ]]; then
  echo "INCOMING_DIR does not exist" >&2
  exit 1
fi

for f in ${FILES}; do
  lftp -c "
    open -u ${FTP_USERNAME},${FTP_PASSWORD} ${FTP_HOSTNAME};
    lcd ${TMPDIR};
    get ${FTP_PATH}${f};
    rm ${FTP_PATH}${f};
  "
  mv "${TMPDIR}/$f" "${INCOMING_DIR}"
done

rm -Rf ${TMPDIR}
